<?xml version="1.0"?>
<robot name="ms_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="wheel_separation" value="0.180"/>
    <link name = "base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://ms_robot_description/meshes/visual/base_link.dae" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <mesh filename="package://ms_robot_description/meshes/visual/wheel.dae" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <mesh filename="package://ms_robot_description/meshes/visual/wheel.dae" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

</robot>